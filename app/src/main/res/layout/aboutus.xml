<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            app:srcCompat="@drawable/logo1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="190dp"
            android:layout_height="180dp"
            android:layout_marginStart="3dp"
            app:srcCompat="@drawable/au1" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Artica is a South Korean-based company that offers sustainable art supplies and recycling services to individuals and businesses in the art industry. Our mission is to reduce the amount of art waste that ends up in landfills and promote sustainable practices in the art industry. " />
"
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="45dp"
            android:text="Our products and services not only benefit the environment but also offer an affordable and ethical solution to the art industry. " />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:layout_marginTop="2dp"
            app:srcCompat="@drawable/au2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/au3" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="7dp"
            android:text="Artica offers a unique and eco-friendly solution to the art industry's waste problem, creating a positive impact on the environment and providing affordable, sustainable, and ethical products and services." />
    </LinearLayout>

</LinearLayout>